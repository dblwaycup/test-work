					<back_positions x="150" y="257" />
					<text>tutor_tasks</text>
					<!-- text steps -->
					<skip_button>1</skip_button>
					<!-- button skip -->
					<show_skip_hint_step_button>1</show_skip_hint_step_button>
					<!-- button close -->
					<global>1</global>
					<!-- анимации -->
					<animations>
						<animation>
							<anim_name>tutorial_arrow</anim_name>
							<anim_rotation>210</anim_rotation>
							<!-- rotation -->
							<anim_pos x="-250" y="180" />
						</animation>
					</animations>
