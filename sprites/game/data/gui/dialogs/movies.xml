		</ctrl>

		<ctrl>
			<name>click_to_continue</name>
			<type>Button</type>
			<enable>1</enable>
			<visible>1</visible>
			<subtype>box</subtype>
			<id>5</id>
			<pos x="0" y="0"/>
			<size x="140" y="33" />
			<tutorial_ignore>1</tutorial_ignore>
			<over_sound>button_authorize</over_sound>
			<btn_text token="click_to_continue">
				<font type="normal" color="ffffffff">data/fonts/gui/agopus25_yellow.fnt</font>
				<font type="hover" color="ffffffff">data/fonts/gui/agopus25_yellow_on.fnt</font>
				<font type="press" color="ffffffff">data/fonts/gui/agopus25_yellow.fnt</font>
				<font type="disabled" color="ff2eeeff">data/fonts/gui/agopus25_yellow.fnt</font>
				<align>TS_ALIGNHCENTER | TS_ALIGNVCENTER | TS_MULTILINE</align>
				<spacing left="0" top="0" right="0" bottom="0" />
			</btn_text>
		</ctrl>
	
	</ctrls>
