				<spt>border_bottom</spt>
			</sprites>
		</ctrl>

		<ctrl>
			<name>border_text</name>
			<type>BackGround</type>
			<enable>1</enable>
			<visible>1</visible>
			<id>3</id>
			<pos x="0" y="0"/>
			<sprites>
				<spt>border_text</spt>
			</sprites>
		</ctrl>
		
		<ctrl>
			<name>default_textbox</name>
			<type>TextBox</type>
			<enable>1</enable>
			<visible>1</visible>
			<font>data/fonts/gui/agopus25.fnt</font>
			<text_scale>0.95</text_scale>
			<style>TS_ALIGNHCENTER | TS_ALIGNVCENTER</style><!-- TS_ALIGNLEFT,TS_ALIGNHCENTER,TS_ALIGNRIGHT,TS_ALIGNTOP,TS_ALIGNVCENTER,TS_ALIGNBOTTOM -->
