			<visible>1</visible>
			<id>1</id>
			<pos x="0" y="0"/>
			<size x="0" y="0" />
			<sprites>
				<spt>border_top</spt>
			</sprites>
		</ctrl>
		
		<ctrl>
			<name>border_bottom</name>
			<type>BackGround</type>
			<enable>1</enable>
			<visible>1</visible>
			<id>2</id>
